nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
  .container
    .navbar-header
      a.navbar-brand(ui-sref="index") Gulper
    ul.nav.navbar-nav.navbar-right
      li.dropdown
        a.dropdown-toggle(data-toggle="dropdown")
          | {{userName(me)}}&nbsp;
          img.img-rounded.img-user-lg(ng-src="http://graph.facebook.com/{{me._socialIdentity.facebook.id}}/picture")
        ul.dropdown-menu
          li
            a(ng-click="logout()")
              i.fa.fa-sign-out
              |  Logout
          li
            a(ui-sref=".settings")
              i.fa.fa-cog
              |  Settings
.container
  .col-sm-2.user-list
    ul.media-list
      li.media.user-list-entry(ng-repeat="user in users", ng-click="openRoom(user)")
        a.pull-left
          img.media-object.img-rounded.img-user(ng-src="http://graph.facebook.com/{{user._socialIdentity.facebook.id}}/picture")
        .media-body
          h5.media-heading {{userName(user)}}
            br
            span.text-muted {{user._socialIdentity.facebook.location.name}}
  .col-sm-10
    ul.nav.nav-pills
      li(ng-class="{'active': chatterIsActive()}")
        a(ui-sref=".chatter")
          h5 Chatter
      li(ng-repeat="room in rooms", ng-class="{'active': isActive(room)}")
        a(ui-sref=".room({_id:room._id})")
          h5 {{roomName(room)}}&nbsp
            span.badge(ng-show="(notifications[room._id])>0") {{notifications[room._id]}}
    div(ui-view="")