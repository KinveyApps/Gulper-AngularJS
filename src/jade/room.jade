.chat-pane
  .row.message-row(ng-repeat="message in messages")
    .col-sm-2
      img.img-rounded.img-user(ng-src="http://graph.facebook.com/{{message.from._socialIdentity.facebook.id}}/picture", ng-show="message.from._id != me._id")
    .col-sm-8(ng-class="{'text-right': message.from._id == me._id}")
      span.text-muted {{message.from._socialIdentity.facebook.name}} (
        span(am-time-ago="message._kmd.ect")
        |)
      br
      | {{message.text}}
    .col-sm-2.text-right
      img.img-rounded.img-user(ng-src="http://graph.facebook.com/{{message.from._socialIdentity.facebook.id}}/picture", ng-show="message.from._id == me._id")
form(role="form")
  .input-group
    input.form-control(type="text", placeholder="Message", ng-model="text")
    span.input-group-btn
      button.btn.btn-default(ng-click="send(text)") Send